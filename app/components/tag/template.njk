{% extends 'views/includes/layout.njk' %}
{% from 'components/tag/macro.njk' import tag %}

{% block body %}
  <h1>View tag component</h1>

  <h3>To use the component</h3>
  <pre><code>
    {% verbatim %}
      {% from 'components/tag/macro.njk' import tag %}

      {{ tag({
        dataTestId: 'example',
        text: 'Example Tag',
        classes: 'example-class'
      }) }}
    {% endverbatim %}
  </code></pre>

  <h3>Rendered component</h3>
  {{ tag({
    dataTestId: 'example',
    text: 'Example Tag',
    classes: 'example-class'
  }) }}
{% endblock %}
