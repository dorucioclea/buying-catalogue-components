{% from 'components/label/macro.njk' import label %}

{% macro viewQuestionDataBulletlist(params) %}
  {% if params.questionData %}
    <div data-test-id="view-question-data-bulletlist">
        <ul class="nhsuk-u-margin-bottom-0">
          {% for data in params.questionData %}
            {% if data.trim() %}
              <li>
                {{ label({
                  "text": data
                }) }}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
    </div>
  {% endif %}
{% endmacro %}
