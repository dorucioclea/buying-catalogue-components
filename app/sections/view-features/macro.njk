{% from 'components/view-data-bulletlist/macro.njk' import viewDataBulletlist %}
{% from 'components/view-section-heading/macro.njk' import viewSectionHeading %}

{% macro viewFeatures(params) %}
  {% if params.section %}
    <div class="nhsuk-width-container" data-test-id="view-features">
      {{ viewSectionHeading({ text: 'Features' }) }}
      <div class="nhsuk-grid-row nhsuk-u-padding-left-3">
        {% if params.section.answers.listing and params.section.answers.listing.length > 0 %}
          <div class="nhsuk-grid-column-two-thirds">
            {{ viewDataBulletlist({
              dataTestIdIdentifier: 'view-question-data-bulletlist',
              data: params.section.answers.listing
            }) }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endmacro %}
