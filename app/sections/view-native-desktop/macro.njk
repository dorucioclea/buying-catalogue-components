{% from 'components/view-section-table-row/macro.njk' import viewSectionTableRow %}
{% from 'components/view-data-bulletlist/macro.njk' import viewDataBulletlist %}
{% from 'components/view-question-data-text/macro.njk' import viewQuestionDataText %}

{% macro viewNativeDesktop(params) %}
  <dl data-test-id="view-section-table-native-desktop" class="nhsuk-summary-list">
    {{ viewSectionTableRow({
      questionId: 'operating-systems-description',
      questionTitle: 'Supported operating systems',
      innerComponent: viewQuestionDataText({
        questionId: 'operating-systems-description',
        questionData: params.section.sections['native-desktop-operating-systems'].answers['operating-systems-description']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'minimum-connection-speed',
      questionTitle: 'Minimum connection speed required',
      innerComponent: viewQuestionDataText({
        questionId: 'minimum-connection-speed',
        questionData: params.section.sections['native-desktop-connection-details'].answers['minimum-connection-speed']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'minimum-memory-requirement',
      questionTitle: 'Minimum memory requirement',
      innerComponent: viewQuestionDataText({
        questionId: 'minimum-memory-requirement',
        questionData: params.section.sections['native-desktop-memory-and-storage'].answers['minimum-memory-requirement']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'storage-requirements-description',
      questionTitle: 'Additional storage requirements',
      innerComponent: viewQuestionDataText({
        questionId: 'storage-requirements-description',
        questionData: params.section.sections['native-desktop-memory-and-storage'].answers['storage-requirements-description']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'minimum-cpu',
      questionTitle: 'Minimum necessary CPU power',
      innerComponent: viewQuestionDataText({
        questionId: 'minimum-cpu',
        questionData: params.section.sections['native-desktop-memory-and-storage'].answers['minimum-cpu']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'recommended-resolution',
      questionTitle: 'Recommended desktop aspect ratio and screen resolution',
      innerComponent: viewQuestionDataText({
        questionId: 'recommended-resolution',
        questionData: params.section.sections['native-desktop-memory-and-storage'].answers['recommended-resolution']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'third-party-components',
      questionTitle: 'Third party components required',
      innerComponent: viewQuestionDataText({
        questionId: 'third-party-components',
        questionData: params.section.sections['native-desktop-third-party'].answers['third-party-components']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'device-capabilities',
      questionTitle: 'Device capabilities required',
      innerComponent: viewQuestionDataText({
        questionId: 'device-capabilities',
        questionData: params.section.sections['native-desktop-third-party'].answers['device-capabilities']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'hardware-requirements',
      questionTitle: 'Hardware requirements',
      innerComponent: viewQuestionDataText({
        questionId: 'hardware-requirements',
        questionData: params.section.sections['native-desktop-hardware-requirements'].answers['hardware-requirements']
      })
    }) }}

    {{ viewSectionTableRow({
      questionId: 'additional-information',
      questionTitle: 'Additional information',
      innerComponent: viewQuestionDataText({
        questionId: 'additional-information',
        questionData: params.section.sections['native-desktop-additional-information'].answers['additional-information']
      })
    }) }}
  </dl>
{% endmacro %}
