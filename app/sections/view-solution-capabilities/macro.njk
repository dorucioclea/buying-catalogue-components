{% from 'components/view-question-data-bulletlist/macro.njk' import viewQuestionDataBulletlist %}
{% from 'components/view-section-heading/macro.njk' import viewSectionHeading %}

{% macro viewSolutionCapabilities(params) %}
  {% if params.section %}
    <div class="nhsuk-width-container" data-test-id="view-solution-capabilities">
      <div class="nhsuk-grid-row">
        {{ viewSectionHeading({text: 'Capabilities met'}) }}
          {% if params.section.description %}
            <p class="nhsuk-grid-column-two-thirds">
              {{ params.section.description }}
            </p>
          {% endif %}
          <div class="nhsuk-grid-column-two-thirds">
            {{ viewQuestionDataBulletlist({
            questionData: params.section.answers['capabilities-met']
            }) }}
        </div>
      </div>
    </div>
  {% endif %}
{% endmacro %}
